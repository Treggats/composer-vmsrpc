{
  "name": "bluebillywig/vmsrpc",
  "description": "Composer package allowing to easily connect and communicate with the Blue Billywig VMS API.",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Blue Billywig",
      "email": "support@bluebillywig.com"
    }
  ],
  "require": {
    "php": ">=7.4|>=8.0|>=8.1",
    "ext-json": "*",
    "ext-curl": "*",
    "ext-dom": "*",
    "ext-fileinfo": "*"
  },
  "autoload": {
    "psr-4": {
      "BlueBillywig\\VMSRPC\\": "src/"
    }
